div(layout="row")
  div(layout="column")
    div(id-"login" ng-hide="authenticated")
      form(id="signup-form" name="signupForm" ng-submit="signup(signupForm)")
        h3 Sign Up
        md-input-container
          label Email
          input(type="email" name="email" ng-model="user.email")
        md-input-container
          label Password
          input(name="password" minlength="8" type="password" ng-model="user.password")
        md-input-container
          label Confirm
          input(name="confirm" type="password" ng-model="user.confirm")       
        br
        md-button(type="submit" class="md-raised md-primary confirm" value="Sign Up") Sign Up
        a(href="#/") Log In
        md-button(type="submit" class="md-raised md-primary confirm" value="Forgot Password?") Forgot Password?
        a(href="resetPassword")
