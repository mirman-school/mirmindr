div(layout="row" ng-show="addingTask" class="popup" id="new-task-div")
  div(layout-"column")
    form(id="new-task-form" name="newTaskForm" ng-submit="addTask(newTaskForm)" novalidate)
      div(class="header")
        h3 New Task
      md-input-container
        label Name
        input(name="name" type="text" ng-model="newTask.name" required)
      br
      md-input-container
        label Subject
        md-select(ng-model="newTask.subject" placeholder="Subject")
          md-option(ng-value="sub.$id" ng-repeat="sub in subjects | orderBy: period") {{sub.name}}
        md-button(class="md-raised md-primary md-small confirm" ng-click="toggleSubjects()") Edit Subjects
      br
      //- label Due Date
      md-datepicker(ng-model="newTask.dueDate" md-min-date="Date.now()" required)
      br
      md-button(type="button" ng-click="toggleAddingTask()" class="md-raised md-warn confirm" value="Cancel") Cancel
      md-button(type="submit" class="md-raised md-primary confirm" value="Add Task") Add Task
