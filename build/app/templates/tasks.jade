div(layout="row")
  div(layout="column")
    div(id-"login" ng-hide="authenticated")
      form(id="login-form" name="loginForm" ng-submit="login(loginForm)")
        h3 Login
        md-input-container
          label Email
          input(type="email" name="email" ng-model="user.email")
        md-input-container
          label Password
          input(name="password" type="password" ng-model="user.password")        
        br
        md-button(type="submit" class="md-raised md-primary confirm" value="Log In") Log In
        a(href="#/signup") Sign Up
    div(id="task-list" ng-show="authenticated")
      div(class="task" ng-repeat="task in data.tasks")
      md-button(id="new-task" class="md-fab md-button md-primary" aria-label="New task" ng-click="newTask")
